<Window x:Class="CircleBeat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow">
    <StackPanel x:Name="MainStack">
        
        <StackPanel>
            
            <Button
                Content="Pick File"
                Click="PickFile_Click" />

            <MediaElement
                x:Name="Media" />

            <Label 
                Content="0"
                x:Name ="CountLbl" />

            <TextBox
                Text="0"
                x:Name="BPMLbl" />

            <Slider Style="{DynamicResource BeatSlider}"
                x:Name="BeatSldr" />

        </StackPanel>
        
        <StackPanel
            x:Name="SliderStack">
            
        </StackPanel>

    </StackPanel>
</Window>
